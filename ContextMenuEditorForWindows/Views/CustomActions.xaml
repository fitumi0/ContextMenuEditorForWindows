<Page
    x:Class="ContextMenuEditorForWindows.Views.CustomActions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ContextMenuEditorForWindows.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <!--Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">-->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right">
            <Button x:Name="AddButton" Click="AddActionShowPopUp"
                    ToolTipService.ToolTip="(Ctrl + N) Новый элемент контекстного меню"
                     Margin="16, 8, 33, 4"
                     Padding="12, 4">
                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE710;"/>
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator
                            Modifiers="Control"
                            Key="N" />
                </Button.KeyboardAccelerators>
            </Button>

        </StackPanel>

        <ListView x:Name="ListOfCustomActions" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0, 8" 
                  SelectionMode="None" Loaded="ListOfCustomActions_Loaded"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.IsHorizontalRailEnabled="True"
                  CornerRadius="16">
            <ListView.ItemTemplate>
                <DataTemplate x:Name="xamlListViewItemtemplate" x:DataType="local:ListViewCustomActionTemplate">
                    <Grid Height="64" BorderBrush="#202020" BorderThickness="2" CornerRadius="16" 
                          Margin="0, 8"
                          Padding="12, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                            <ToggleSwitch Toggled="{x:Bind ToggledFunc}" IsOn="{x:Bind SwitchIsOn}"></ToggleSwitch>
                            <TextBlock Text="{x:Bind Text}" VerticalAlignment="Center" Style="{ThemeResource BaseTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}" 
                                       Margin="12, 0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <DropDownButton Content="{x:Bind DefaultMenu}"
                                            IsEnabled="{x:Bind DropDownVisible}">
                                <DropDownButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem Text="Directory" Tag="1" Click="MenuFlyoutItem_Click"/>
                                        <MenuFlyoutItem Text="Directory Background" Tag="2" Click="MenuFlyoutItem_Click"/>
                                        <MenuFlyoutItem Text="Desktop" Tag="3" Click="MenuFlyoutItem_Click"/>
                                        <MenuFlyoutItem Text="File" Tag="0" Click="MenuFlyoutItem_Click"/>
                                        <MenuFlyoutItem Text="Drive" Tag="4" Click="MenuFlyoutItem_Click"/>
                                    </MenuFlyout>
                                </DropDownButton.Flyout>
                            </DropDownButton>
                            <Button HorizontalAlignment="Right" Grid.Column="1" Margin="8, 0" Padding="12, 5" IsEnabled="{x:Bind ButtonVisible}" Click="DeleteButton_Click">
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE74D;"/>
                            </Button>
                        </StackPanel>
                        
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>

    </Grid>
</Page>
